<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition  Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="名前" Width="80" VerticalAlignment="Center" FontSize="20"/>
                <TextBox x:Name="NameTextBox" Width="250" HorizontalAlignment="Right" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="電話番号" Width="80" VerticalAlignment="Center" FontSize="20"/>
                <TextBox x:Name="PhoneTextBox" Width="250" HorizontalAlignment="Right" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="住所" Width="80" VerticalAlignment="Center" FontSize="20"/>
                <TextBox x:Name="addressTextBox" Width="250" HorizontalAlignment="Right" Margin="5" />
            </StackPanel>

            <Button Content="更新" x:Name="UpdateButton" Click="UpdateButton_Click" Margin="10" Height="40" FontSize="25"/>
            <Button Content="保存" x:Name="SaveButton" Click="SaveButton_Click" Margin="10" Height="40" FontSize="25"/>
            <Button Content="削除" x:Name="DeleteButton" Click="DeleteButton_Click" Margin="10" Height="40" FontSize="25"/>
            <StackPanel Orientation="Horizontal" Margin="20">
                <Button Content="画像" x:Name="ImageButton" Click="ImageButton_Click"
            Width="80" Height="60" FontSize="20" Margin="0,0,10,0"/>
                <Image x:Name="SelectedImage" Width="220" Height="100" Stretch="UniformToFill"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TextBox x:Name="SearchTextBox" Margin="5" FontSize="20" Height="40"/>
            <ListView x:Name="PersonListView"  Margin="0,5,0,0" Height="375" Width="440">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Id}"/>
                            <TextBlock Text="{Binding Name}" FontSize="20" />
                            <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                            <TextBlock Text="{Binding address}" Foreground="HotPink" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>