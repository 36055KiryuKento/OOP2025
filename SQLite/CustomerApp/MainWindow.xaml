<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition  Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="名前" Width="80" VerticalAlignment="Center" FontSize="20"/>
            <TextBox x:Name="NameTextBox" Width="250" HorizontalAlignment="Right" Margin="5" TextChanged="NameTextBox_TextChanged"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="電話番号" Width="80" VerticalAlignment="Center" FontSize="20"/>
                <TextBox x:Name="PhoneTextBox" Width="250" HorizontalAlignment="Right" Margin="5" TextChanged="PhoneTextBox_TextChanged"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="住所" Width="80" VerticalAlignment="Center" FontSize="20"/>
                <TextBox x:Name="addressTextBox" Width="250" HorizontalAlignment="Right" Margin="5" TextChanged="addressTextBox_TextChanged"/>
            </StackPanel>

            <Button Content="更新" x:Name="UpdateButton" Click="UpdateButton_Click" Margin="20" Height="40" FontSize="25"/>
            <Button Content="保存" x:Name="SaveButton" Click="SaveButton_Click" Margin="20" Height="40" FontSize="25"/>
            <Button Content="削除" x:Name="DeleteButton" Click="DeleteButton_Click" Margin="20" Height="40" FontSize="25"/>
            <Button Content="画像" x:Name="ImageButton" Click="ImageButton_Click" Margin="20" Height="40" FontSize="25"/>
        </StackPanel>
        <StackPanel Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TextBox x:Name="SearchTextBox" Margin="5" FontSize="20" Height="40" TextChanged="SearchTextBox_TextChanged"/>
            <ListView x:Name="PersonListView" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Id}"/>
                            <TextBlock Text="{Binding Name}" FontSize="20" />
                            <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>