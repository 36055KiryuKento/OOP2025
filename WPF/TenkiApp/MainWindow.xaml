<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TenkiApp" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左：日本地図 + ボタン -->
        <Canvas Grid.Column="0" Width="350" Height="460">
            <!-- 日本地図 -->
            <Image x:Name="JapanMap"
                   Source="pack://application:,,,/Images/japan_map.png"
                   Width="350" Height="460"
                   Panel.ZIndex="0"/>

            <!-- ボタン -->
            <Button Content="東京" Width="56" Height="35"
                    Click="CityButton_Click"
                    Canvas.Left="228" Canvas.Top="260" Panel.ZIndex="1"/>
            <Button Content="北海道" Width="58" Height="37"
                    Click="CityButton_Click"
                    Canvas.Left="198" Canvas.Top="91" Panel.ZIndex="1"/>
            <Button Content="大阪" Width="51" Height="35"
                    Click="CityButton_Click"
                    Canvas.Left="141" Canvas.Top="260" Panel.ZIndex="1"/>
        </Canvas>

        <!-- 右：都市入力 + 天気表示 -->
        <StackPanel Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="都市名（例：東京、大阪、札幌）" FontSize="16" Margin="0,0,0,10"/>
            <TextBox x:Name="CityBox" Height="35" Margin="0,0,0,10"/>
            <Button Content="天気を取得" Width="150" Height="40" Click="GetWeather_Click"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Image x:Name="WeatherIcon" Width="64" Height="64" Margin="0,0,10,0"/>
                <TextBox x:Name="ResultBox"
                         FontSize="16"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="250"
                         Width="400"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
