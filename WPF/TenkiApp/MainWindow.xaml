<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TenkiApp" Height="500" Width="900" Background="LightBlue">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左：日本地図 -->
        <Image x:Name="JapanMap"
       Source="pack://application:,,,/Images/japan_map.png"
       Stretch="Uniform"
       Grid.Column="0"/>


        <!-- 右：都市入力＋天気 -->
        <StackPanel Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="都市名（例：東京、大阪、札幌）" FontSize="16" Margin="0,0,0,10"/>
            <TextBox x:Name="CityBox" Height="35" Margin="0,0,0,10"/>
            <Button Content="天気を取得" Width="150" Height="40" Click="GetWeather_Click"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" VerticalAlignment="Top">
                <Image x:Name="WeatherIcon" Width="64" Height="64" Margin="0,0,10,0"/>
                <TextBox x:Name="ResultBox"
                         FontSize="16"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="250"
                         Width="400"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
